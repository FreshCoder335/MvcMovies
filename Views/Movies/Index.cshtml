@model MvcMovie.Models.MovieGenreViewModel

@{
    // Set the title of the page
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <!-- Link to create a new movie -->
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <!-- Dropdown for filtering movies by genre -->
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <!-- Input for searching by movie title -->
        Title: <input type="text" asp-for="SearchString" />
        <!-- Submit button for applying filters -->
        <input type="submit" value="Filter" />
    </p>
</form>

<!-- Table to display list of movies -->
<table class="table">
    <thead>
        <tr>
            <th>
                <!-- Display name of the movie title column -->
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th>
                <!-- Display name of the release date column -->
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th>
                <!-- Display name of the genre column -->
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th>
                <!-- Display name of the price column -->
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th>
                <!-- Display name of the rating column -->
                @Html.DisplayNameFor(model => model.Movies![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through each movie in the model to display -->
        @foreach (var item in Model.Movies!)
        {
            <tr>
                <td>
                    <!-- Display title of the movie -->
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <!-- Display release date of the movie -->
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    <!-- Display genre of the movie -->
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    <!-- Display price of the movie -->
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <!-- Display rating of the movie -->
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <!-- Links for editing, viewing details, and deleting the movie -->
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
